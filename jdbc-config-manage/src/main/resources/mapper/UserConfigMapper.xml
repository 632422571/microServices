<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.globalcash.spring.cloud.config.mapper.UserConfigMapper" >

    <resultMap id="BaseResultMap" type="cn.globalcash.spring.cloud.config.domain.UserConfig" >
        <id column="id" property="id" jdbcType="INTEGER" />
        <result column="name" property="name" jdbcType="VARCHAR" />
    </resultMap>

    <select id="getUserConfig" resultMap="BaseResultMap"  >
        SELECT id, name FROM users
    </select>

    <update id="updateUserConfig">
        UPDATE users set name = #{name} where id = #{id}
    </update>
</mapper>